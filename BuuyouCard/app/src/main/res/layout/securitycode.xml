<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FF9100"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:src="@mipmap/back"
            android:id="@+id/iv_security_back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入验证码"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_security_title"
            android:layout_toRightOf="@+id/iv_security_back"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="123dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="9dp"
        android:background="#FFFFFF">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入您收到的验证码"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEB"
        >
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#FF9100"
        android:text="下 一 步"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="9dp"
        android:textSize="16dp"
        android:id="@+id/bt_securitycode_next"
        />
</LinearLayout>